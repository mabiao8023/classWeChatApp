
  <view class="container">
    <!-- <contact></contact> -->
    <picker class="my-picker" mode="date" start="{{start}}" end="{{end}}" bindchange="bindDateChange">
    <view class="nav">
      <image class="date-choice" src="../images/date.png"/>
        <view>今天 {{date}} 共{{total}}场</view>
        <image src="../images/arrow.png" class="arrow-right"/>
    </view>
        
    </picker>
    <view class="upLoading down-flash"> 
      <image class="loading-img" src="../images/footerball.png"/> 
      <view>比赛刷新中</view>
    </view>
     <view class="game-list">
          <view class="game-item"  wx:for="{{matchList}}" wx:key="{{index}}">
          <form bindsubmit="formSubmit" report-submit="true" bindreset="formReset">
             <button class="collect-btn" bindtap="collect" formType="submit" data-wpycollect-a="{{index}}" data-wpycollect-b="{{item.match_id}}">
               <image wx:if="{{!item.is_collect}}" class="collect" src="../images/sc.png"/>
              <image wx:else class="collect" src="../images/sc-active.png"/>
             </button>
          </form>
          <view class="game-item-content">
              <view class="game-item-con-info">
                  <view class="game-ls">
                    <view style="color:{{item.league_color}}">{{item.league_name}}</view>
                    <view class="game-time">{{item.match_time_minute}}</view>
                  </view>
                  <view class="game-minutes">未</view>
              </view>
              <view class="game-name">
                 <view class="home">
                    <view class="red" wx:if="{{item.home_red}}">{{item.home_red}}</view>
                    <view class="yellow" wx:if="{{item.home_yellow}}">{{item.home_yellow}}</view>
                    <view class="name">{{item.home}}</view>
                 </view>
                 <view class="score">VS</view>
                 <view class="other">
                    <view class="name">{{item.away}}</view>
                    <view class="yellow" wx:if="{{item.away_yellow}}">{{item.away_yellow}}</view> 
                    <view class="red" wx:if="{{item.away_red}}">{{item.away_red}}</view>
                 </view>
              </view>
           </view> 
           <view>
               <button class="share-btn" open-type="share">
                 <image bindtap="setShareContent" class="collect share" src="../images/share.png" data-wpysetsharecontent-a="{{item}}"/>
               </button>
           </view>
        </view>
    </view>   
    <!--  -->
    <view class="upLoading"  wx:if="{{isUpFrash}}"> 
      <image class="loading-img" src="../images/footerball.png"/> 
      <view>正在加载中</view>
    </view>
    <view class="upLoading" wx:else> 暂无更多数据 </view>
  </view>
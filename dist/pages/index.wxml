    <view class="nav">
        <view class="{{type == 0 ? 'nav-item active': 'nav-item' }}" bindtap="chioceType" data-wpychiocetype-a="0">即时</view>
        <view class="{{type == 1 ? 'nav-item active': 'nav-item' }}" bindtap="chioceType" data-wpychiocetype-a="1">赛果</view>
        <view class="nav-item {{type == 2 ? 'active' : ''}}"  bindtap="chioceType" data-wpychiocetype-a="2">赛程</view>

@import "./../components/contact.wxss";
.banner {
  width: 100%;
}
.banner image {
  width: 100%;
  height: 374rpx;
}
.banner .video-container .view-cover {
  width: 100%;
  height: 480rpx;
}
.class-info-text {
  width: 100%;
  padding: 20rpx;
  font-size: 38rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #e2e2e2;
}
.class-info-text .class-money {
  color: red;
  margin-right: 20rpx;
}
.class-info-text .class-name {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.class-info-text .class-name .class-tag {
  padding: 5rpx 10rpx;
  font-size: 30rpx;
  color: #fff;
  background: red;
  border-radius: 4rpx;
}
.try-title {
  padding: 20rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #e2e2e2;
  align-items: center;
  position: relative;
}
.try-title .icon {
  margin-right: 30rpx;
  width: 48rpx;
  height: 48rpx;
}
.try-title .icon image {
  width: 48rpx;
  height: 48rpx;
}
.try-title .desc {
  color: #666;
  font-size: 34rpx;
  margin-left: 20rpx;
}
.try-title .arrow {
  position: absolute;
  right: 20rpx;
}
.try-title .arrow image {
  width: 56rpx;
  height: 56rpx;
}
.try-list .try-item {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #e2e2e2;
}
.try-list .try-item .try-item-img {
  width: 236rpx;
  height: 140rpx;
  margin-right: 20rpx;
  position: relative;
}
.try-list .try-item .try-item-img image {
  width: 236rpx;
  height: 140rpx;
}
.try-list .try-item .try-item-img .try-tag {
  position: absolute;
  top: 0;
  left: 10rpx;
  background: #2cbd6c;
  color: #fff;
  font-size: 32rpx;
  padding: 5rpx 10rpx;
  border-bottom-left-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}
.try-list .try-item .try-item-img .mask-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.try-list .try-item .try-item-img .mask-box image {
  width: 80rpx;
  height: 80rpx;
}
.try-list .try-item .try-item-content {
  font-size: 34rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.try-list .try-item .try-item-content .try-item-desc {
  width: 100%;
  color: #666;
  font-size: 32rpx;
}
.try-list .try-item .try-item-content .try-item-time {
  width: 100%;
  display: flex;
  color: #666;
  font-size: 32rpx;
  align-items: center;
  margin-top: 10rpx;
}
.try-list .try-item .try-item-content .try-item-time icon {
  margin-right: 16rpx;
}
.chapeter-container {
  width: 100%;
}
.class-progress {
  width: 100%;
  display: flex;
  align-items: middle;
  margin-top: 20rpx;
}
.progress {
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 10rpx;
}
.progress-container {
  flex: 1;
  margin-right: 10px;
}
.progress-tip {
  font-size: 32rpx;
  color: #666;
}

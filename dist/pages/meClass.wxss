@import "./../components/contact.wxss";
.container {
  background: #eee;
}
.container .c-fl-children-list {
  width: 100%;
}
.container .pay-tip {
  background: #fff;
  text-align: center;
  color: #151515;
  width: 100%;
  padding: 20rpx;
  font-size: 40rpx;
  border-bottom: 1rpx solid #eee;
}
.container .preson-center {
  position: fixed;
  bottom: 150rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
}
.container .c-xq {
  font-size: 0;
  width: 100%;
}
.container .p20 {
  padding: 20rpx;
}
.container .b-title {
  font-size: 30rpx;
  color: #151515;
}
.container .m-title {
  font-size: 36rpx;
  color: #151515;
}
.container .b-desc {
  font-size: 36rpx;
  color: #666;
}
.container .m-desc {
  font-size: 32rpx;
  color: #666;
}
.container .empty-list {
  text-align: center;
  padding: 120rpx;
}
.container .empty-list image {
  width: 128rpx;
  height: 128rpx;
}
.container .empty-list .gotoClassList {
  margin: 30rpx auto;
  background: #2cbd6c;
  width: 250rpx;
  padding: 20rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  color: #fff;
}
.c-fl-children-item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 30rpx;
  margin-bottom: 0;
  background: #fff;
  border-bottom: 1rpx solid #e2e2e2;
}
.c-fl-children-item .c-info-img {
  width: 236rpx;
  height: 140rpx;
  overflow: hidden;
  position: relative;
}
.c-fl-children-item .c-info-img image {
  width: 236rpx;
  height: 140rpx;
}
.c-fl-children-item .c-info-img .c-info-tag {
  position: absolute;
  left: 10rpx;
  max-width: 140rpx;
  overflow: hidden;
  padding: 10rpx;
  color: #fff;
  background: red;
  font-size: 30rpx;
  border-radius: 8rpx;
}
.c-fl-children-item .c-info-content {
  height: 140rpx;
  flex: 1;
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
  margin-left: 20rpx;
}
.c-fl-children-item .c-info-content .m-desc {
  width: 100%;
  text-align: justify;
  margin: 20rpx 0;
}
.c-fl-children-item .c-info-content .progress-container {
  width: 100%;
  display: flex;
  align-items: center;
}
.c-fl-children-item .c-info-content .progress-container .progress-show {
  color: #999;
  font-size: 30rpx;
  margin-left: 10rpx;
}
.c-fl-children-item .c-info-content .progress {
  width: 60%;
  border-radius: 10rpx;
  overflow: hidden;
}
